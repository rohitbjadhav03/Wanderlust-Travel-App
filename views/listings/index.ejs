<% layout("layouts/boilerplate") %> 

<h3 class="mb-4">All Listings</h3>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 row-cols-xs-1 g-4">
  <% for (let listing of allListings) { %>
    <a href="/listings/<%= listing._id %>" class="listing-link text-decoration-none text-dark">
      <div class="card col listing-card shadow-sm">
        <img
          src="<%= listing.image && listing.image.url ? listing.image.url : '/images/default.jpg' %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem; object-fit: cover;"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text mb-1">
            <b><%= listing.title %></b><br />
            &#8377;
            <%= (listing.price !== undefined && listing.price !== null)
              ? listing.price.toLocaleString("en-IN")
              : "Price unavailable" %> / night
          </p>
          <p class="text-muted mb-0">
            <%= listing.location || "Unknown location" %>, 
            <%= listing.country || "" %>
          </p>
        </div>
      </div>
    </a>
  <% } %>
</div>
